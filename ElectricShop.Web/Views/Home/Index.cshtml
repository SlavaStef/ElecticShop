@using ElectricShop.Common.DTO;
@model IEnumerable<ElectricShop.Common.DTO.ProductDTO>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<div class="container-fluid no-gutters">
    @foreach (ProductDTO product in Model)
    {
        <div class="row">
            <div class="col">
                <div class="container-fluid no-gutters">
                    <div class="row">
                        <div class="col-10">
                            <h4>@product.Name</h4>
                        </div>
                        <div class="col-2">
                            <h4><span class="pull-right label label-primary">@product.Price.ToString("c")</span></h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-10">
                            <span class="lead">@product.Description</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                @using(Html.BeginForm("AddToCart", "Cart"))
                {
                    <div class="pull-right">
                        @Html.Hidden("productId", product.Id)
                        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                        <input type="submit" class="btn btn-success" value="Add to cart" />
                    </div>
                }
            </div>
        </div>
    }
</div>